367  VALID perfect Square
brute force:

class Solution {
    public boolean isPerfectSquare(int num) {
        for(int i=1;i<=num;i++){
            if((i*i)==num){
                return true;
            }
        }
        return false;
        
    }
}


class Solution {
    public boolean isPerfectSquare(int num) {
        if(num==1){
            return true;
            
        }
        for(int i=2;i<=num/2;i++){
            if((i*i)==num){
                return true;
            }
        }
        return false;
        
    }
}


using BS:

class Solution {
    public boolean isPerfectSquare(int num) {
        if (num < 2) {
            return true;
        }

        int left = 2, right = num / 2;

        while (left <= right) {
            int mid = left + (right - left) / 2;
            long squared = (long) mid * mid;

            if (squared == num) {
                return true;
            } else if (squared < num) {
                left = mid + 1;
            } else {
                right = mid - 1;
            }
        }

        return false;
    }
}

