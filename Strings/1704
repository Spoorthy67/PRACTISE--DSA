class Solution {
    public boolean halvesAreAlike(String s) {
        String vowels="aeiouAEIOU";
        int fvcount=0;
        int svcount=0;
        
        for(int i=0;i<s.length()/2;i++){
            if(vowels.indexOf(s.charAt(i))!=-1){
                fvcount++;
            }
        }
        for(int i=s.length()/2;i<s.length();i++){
            if(vowels.indexOf(s.charAt(i))!=-1){
                svcount++;
            }
        }
        return fvcount==svcount;
    }
}
